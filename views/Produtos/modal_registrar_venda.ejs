<div id="modalRegistrarVenda" class="modal">
  <div class="modal-content">
    <div class="modal-header">
      <button class="back-button" onclick="fecharModal('modalRegistrarVenda')">
        <i class="arrow-left"
          ><img src="/assets/Icon (1).png" alt="voltar"
        /></i>
      </button>
      <h2>Registrar Venda de Produto</h2>
      <button class="home-button" onclick="window.location.href='/home'">
        <i class="home-icon"
          ><img src="/assets/home-lg-alt 1.png" alt="home"
        /></i>
      </button>
    </div>

    <div class="modal-body">
      <form id="formRegistroVenda">
        <div class="form-row">
          <div class="form-group">
            <label for="data">Data:</label>
            <input
              type="date"
              id="data"
              placeholder="DD/MM/AAAA"
              maxlength="10"
              required
            />
          </div>
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="produto">Produto:</label>
            <select id="produto" required>
              <option value="" disabled selected>Carregando produtos...</option>
            </select>
          </div>
          <div class="form-group">
            <label for="funcionario">Funcion√°rio Respons√°vel (CPF):</label>
            <input
              type="text"
              id="funcionario"
              placeholder="000.000.000-00"
              maxlength="14"
              required
            />
          </div>
        </div>

        <div class="form-row">
          <div class="form-group">
            <div class="checkbox-container">
              <label for="formaPagamento">Forma de Pagamento:</label>
              <div class="checkbox-item">
                <input
                  type="checkbox"
                  name="formaPagamento"
                  id="dinheiro"
                  value="Dinheiro"
                />
                <label for="dinheiro">Dinheiro</label>
              </div>
              <div class="checkbox-item">
                <input
                  type="checkbox"
                  name="formaPagamento"
                  id="pix"
                  value="Pix"
                />
                <label for="pix">PIX</label>
              </div>
              <div class="checkbox-item">
                <input
                  type="checkbox"
                  name="formaPagamento"
                  id="credito"
                  value="Cr√©dito"
                />
                <label for="credito">Cr√©dito</label>
              </div>
              <div class="checkbox-item">
                <input
                  type="checkbox"
                  name="formaPagamento"
                  id="debito"
                  value="D√©bito"
                />
                <label for="debito">D√©bito</label>
              </div>
            </div>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="quantidade">Quantidade:</label>
            <input type="number" id="quantidade" placeholder="0" required />
          </div>
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="valorTotal">Valor Total:</label>
            <input
              type="text"
              id="valorTotal"
              placeholder="R$ 00,00"
              required
            />
          </div>
        </div>

        <div class="form-row">
          <button type="submit" class="cadastrar-btn-reg">Registrar</button>
        </div>
      </form>
    </div>
  </div>
</div>
<script>
  document
    .getElementById("funcionario")
    .addEventListener("input", function (event) {
      let cpf = event.target.value;

      // Remove tudo que n√£o for n√∫mero
      cpf = cpf.replace(/\D/g, "");

      // Aplica a m√°scara (000.000.000-00)
      if (cpf.length <= 11) {
        cpf = cpf.replace(/(\d{3})(\d)/, "$1.$2");
        cpf = cpf.replace(/(\d{3})(\d)/, "$1.$2");
        cpf = cpf.replace(/(\d{3})(\d{1,2})$/, "$1-$2");
      }

      event.target.value = cpf;
    });

  // Formata√ß√£o para o campo de valor
  document.getElementById("valorTotal").addEventListener("input", function (e) {
    let value = e.target.value.replace(/\D/g, "");
    value = (parseInt(value || "0") / 100).toFixed(2).replace(".", ",");
    e.target.value = "R$ " + value;
  });

  document
    .querySelectorAll('.checkbox-item input[type="checkbox"]')
    .forEach((checkbox) => {
      checkbox.addEventListener("change", function () {
        // Se este checkbox foi marcado, desmarcar os outros
        if (this.checked) {
          document
            .querySelectorAll('.checkbox-item input[type="checkbox"]')
            .forEach((otherCheckbox) => {
              if (otherCheckbox !== this) {
                otherCheckbox.checked = false;
              }
            });
        }
      });
    });

  // Fun√ß√£o para carregar os Produtos e preencher o select
  async function carregarProdutos() {
    try {
      const response = await fetch("/produtos/listar");
      if (!response.ok) {
        throw new Error("Erro ao carregar produtos.");
      }

      const produtos = await response.json();
      const selectProduto = document.getElementById("produto");

      // Limpa as op√ß√µes existentes (exceto a padr√£o)
      selectProduto.innerHTML =
        '<option value="" disabled selected>Selecione o produto</option>';

      // Adiciona os produtos ao select
      produtos.forEach((produto) => {
        const option = document.createElement("option");
        option.value = produto.idproduto; // O valor ser√° o idproduto
        option.textContent = produto.nome; // O texto ser√° o nome do produto
        selectProduto.appendChild(option);
      });
    } catch (error) {
      console.error(error);
    }
  }

  // Chamar a fun√ß√£o ao abrir o modal
  document.addEventListener("DOMContentLoaded", carregarProdutos);

  // Captura o evento de envio do formul√°rio
  document
    .getElementById("formRegistroVenda")
    .addEventListener("submit", async function (event) {
      event.preventDefault(); // Impede o recarregamento da p√°gina

      // Captura os valores dos campos do formul√°rio
      const data = document.getElementById("data").value;
      const idProduto = document.getElementById("produto").value;
      const cpfFuncionario = document.getElementById("funcionario").value;
      const quantidade = parseInt(document.getElementById("quantidade").value);
      const formaPagamento = document.querySelector(
        'input[name="formaPagamento"]:checked'
      )?.value;
      const valorTotal = parseFloat(
        document
          .getElementById("valorTotal")
          .value.replace("R$ ", "")
          .replace(",", ".")
      );

      console.log({
        data,
        produto,
        funcionario,
        quantidade,
        formaPagamento,
        valorTotal,
      }); // üîç Verifica os valores no console

      // Verifica√ß√£o de preenchimento
      if (
        !data ||
        !idProduto ||
        !cpfFuncionario ||
        !quantidade ||
        !formaPagamento ||
        !valorTotal
      ) {
        alert("Preencha todos os campos!");
        return;
      }

      // Enviar os dados para o backend
      try {
        const response = await fetch("/produtos/registrar", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            data,
            idProduto,
            cpfFuncionario,
            quantidade,
            formaPagamento,
            valorTotal,
          }),
        });

        const result = await response.json();

        if (response.ok) {
          alert("Venda registrada com sucesso!");
          document.getElementById("formRegistroVenda").reset();
          fecharModal("modalRegistrarVenda");
        } else {
          alert(`Erro ao registrar venda: ${result.message}`);
        }
      } catch (error) {
        console.error("Erro ao registrar venda:", error);
        alert("Erro no servidor. Tente novamente.");
      }
    });

  // Fun√ß√£o para fechar o modal
  function fecharModal(idModal) {
    document.getElementById(idModal).style.display = "none";
  }
</script>
